@{
    ViewData["Title"] = "Security & Visitors Management";
}

<div class="security-container">
    <h1 class="page-title">Security & Visitors Management</h1>

    <!-- SECURITY AND VISITORS-->
    <div class="section-container">
        <h2>Visitor Pass Requests</h2>
        <div class="card">
            <form id="visitorForm" class="form-container">
                <div class="form-group">
                    <label for="visitorName">Visitor Name</label>
                    <input type="text" id="visitorName" name="visitorName" required>
                </div>
                <div class="form-group">
                    <label for="visitorContact">Contact Number</label>
                    <input type="tel" id="visitorContact" name="visitorContact" required>
                </div>
                <div class="form-group">
                    <label for="visitDate">Visit Date</label>
                    <input type="date" id="visitDate" name="visitDate" required>
                </div>
                <div class="form-group">
                    <label for="visitPurpose">Purpose of Visit</label>
                    <textarea id="visitPurpose" name="visitPurpose" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn-primary">Submit Request</button>
            </form>
        </div>
    </div>

    <!-- VECHICLE AND REGISTRATION -->
    <div class="section-container">
        <h2>Vehicle Registration</h2>
        <div class="card">
            <form id="vehicleForm" class="form-container">
                <div class="form-group">
                    <label for="vehiclePlate">License Plate Number</label>
                    <input type="text" id="vehiclePlate" name="vehiclePlate" required>
                </div>
                <div class="form-group">
                    <label for="vehicleMake">Vehicle Make</label>
                    <input type="text" id="vehicleMake" name="vehicleMake" required>
                </div>
                <div class="form-group">
                    <label for="vehicleModel">Vehicle Model</label>
                    <input type="text" id="vehicleModel" name="vehicleModel" required>
                </div>
                <div class="form-group">
                    <label for="vehicleColor">Vehicle Color</label>
                    <input type="text" id="vehicleColor" name="vehicleColor" required>
                </div>
                <button type="submit" class="btn-primary">Register Vehicle</button>
            </form>
        </div>
    </div>

    <!-- EMERGENCY CONTACTS -->
    <div class="section-container">
        <h2>Emergency Contacts</h2>
        <div class="card">
            <div class="contacts-list">
                <div class="contact-item">
                    <h3>Security Office</h3>
                    <p>Phone: (555) 123-4567</p>
                    <p>Email: security@subdivision.com</p>
                </div>
                <div class="contact-item">
                    <h3>Emergency Services</h3>
                    <p>Police: 911</p>
                    <p>Fire Department: 911</p>
                    <p>Ambulance: 911</p>
                </div>
                <div class="contact-item">
                    <h3>Management Office</h3>
                    <p>Phone: (555) 987-6543</p>
                    <p>Email: management@subdivision.com</p>
                </div>
            </div>
        </div>
    </div>
</div>
