                            <option value="2023">2023</option>
                        </select>
                    </div>
                </div>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Request ID</th>
                                <th>Homeowner</th>
                                <th>Service Type</th>
                                <th>Priority</th>
                                <th>Date Completed</th>
                                <th>Completion Time</th>
