    <!-- REQUEST DETAILS MODAL -->
    <div id="requestDetailsModal" class="modal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeRequestDetailsModal()">&times;</span>
            <h2>Request Details</h2>
            <div id="requestDetailsContent">
                <!-- DYBAMIC -->
            </div>
        </div>
    </div>

    <!-- UPDATE STATUS MODAL -->
    <div id="updateStatusModal" class="modal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeUpdateStatusModal()">&times;</span>
            <h2>Update Request Status</h2>
            <form id="updateStatusForm">
                <div class="form-group">
                    <label for="newStatus">New Status</label>
                    <select id="newStatus" required>
                        <option value="pending">Pending</option>
                        <option value="in-progress">In Progress</option>
                        <option value="completed">Completed</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="updateStatusNotes">Staff Notes</label>
                    <textarea id="updateStatusNotes" placeholder="Add any relevant notes..."></textarea>
                </div>
                <button type="submit" class="submit-btn">Update Status</button>
            </form>
        </div>
    </div>

    <!-- STAFF NOTES MODAL -->
    <div id="staffNotesModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Edit Staff Notes</h2>
                <span class="close-btn" onclick="closeStaffNotesModal()">&times;</span>
            </div>
            <div class="modal-body">
                <form id="staffNotesForm">
                    <div class="form-group">
                        <label for="requestId">Request ID:</label>
                        <input type="text" id="requestId" readonly>
                    </div>
                    <div class="form-group">
                        <label for="homeownerName">Homeowner:</label>
                        <input type="text" id="homeownerName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="serviceType">Service Type:</label>
                        <input type="text" id="serviceType" readonly>
                    </div>
                    <div class="form-group">
                        <label for="editStaffNotes">Staff Notes:</label>
                        <textarea id="editStaffNotes" rows="5" placeholder="Enter your notes here..."></textarea>
                    </div>
                    <div class="form-actions">
                        <button type="button" class="cancel-btn" onclick="closeStaffNotesModal()">Cancel</button>
                        <button type="submit" class="save-btn">Save Notes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- ASSIGN STAFF MODAL -->
    <div id="assignStaffModal" class="modal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeModal('assignStaffModal')">&times;</span>
            <h2>Assign Staff</h2>
            <form id="assignStaffForm">
                <input type="hidden" id="assignRequestId">
                <div>
                    <label for="staffSelect">Select Staff:</label>
                    <select id="staffSelect" required></select>
                </div>
                <button type="submit">Assign</button>
            </form>
        </div>
    </div>

    <!-- Add Staff Modal -->
    <div id="addStaffModal" class="modal" style="display:none;">
        <div class="modal-content">
            <span class="close-btn" onclick="closeModal('addStaffModal')">&times;</span>
            <h2>Add Staff Member</h2>
            <form id="addStaffForm">
                <input type="text" id="staffFirstName" placeholder="First Name" required>
                <input type="text" id="staffLastName" placeholder="Last Name" required>
                <input type="text" id="staffUsername" placeholder="Username" required>
                <input type="password" id="staffPassword" placeholder="Password" required>
                <button type="submit">Add Staff</button>
            </form>
        </div>
    </div>

    <script>
        // SIDEBAR
        const menuBar = document.querySelector('#content nav .bx.bx-menu');
        const sidebar = document.getElementById('sidebar');

        menuBar.addEventListener('click', function () {
            sidebar.classList.toggle('hide');
        });

        // DARK MODE
        const switchMode = document.getElementById('switch-mode');
        const body = document.body;

        if (localStorage.getItem('darkMode') === 'true') {
            body.classList.add('dark');
            switchMode.checked = true;
        }

        switchMode.addEventListener('change', function() {
            if (this.checked) {
                body.classList.add('dark');
                localStorage.setItem('darkMode', 'true');
            } else {
                body.classList.remove('dark');
                localStorage.setItem('darkMode', 'false');
            }
        });

        // SAMPLE DATA
        let filteredRequests = [];
        let currentPage = 1;
        const itemsPerPage = 5;

        // Get status text for display
        function getStatusText(status) {
            if (!status) return '';
            
            const statusMap = {
                'pending': 'Pending',
                'accepted': 'Accepted',
                'rejected': 'Rejected',
                'in-progress': 'In Progress',
                'completed': 'Completed'
            };
            return statusMap[status.toLowerCase()] || status;
        }

        // Function to bind all event listeners
        function bindEventListeners() {
            // View Details button
            document.querySelectorAll('.action-btn.view').forEach(button => {
                button.onclick = function() {
                    viewRequestDetails(parseInt(this.getAttribute('data-request-id')));
                };
            });
            
            // Accept button
            document.querySelectorAll('.action-btn.accept').forEach(button => {
                button.onclick = function() {
                    const requestId = parseInt(this.getAttribute('data-request-id'));
                    if (confirm('Are you sure you want to accept this request?')) {
                        updateRequestStatus(requestId, 'Accepted');
                    }
                };
            });
            
            // Reject button
            document.querySelectorAll('.action-btn.reject').forEach(button => {
                button.onclick = function() {
                    const requestId = parseInt(this.getAttribute('data-request-id'));
                    if (confirm('Are you sure you want to reject this request?')) {
                        updateRequestStatus(requestId, 'Rejected');
                    }
                };
            });
            
            // Progress button
            document.querySelectorAll('.action-btn.progress').forEach(button => {
                button.onclick = function() {
                    const requestId = parseInt(this.getAttribute('data-request-id'));
                    updateRequestStatus(requestId, 'In Progress');
                };
            });
            
            // Complete button
            document.querySelectorAll('.action-btn.complete').forEach(button => {
                button.onclick = function() {
                    const requestId = parseInt(this.getAttribute('data-request-id'));
                    updateRequestStatus(requestId, 'Completed');
                };
            });
        }

        // View request details
        function viewRequestDetails(requestId) {
            const request = filteredRequests.find(r => String(r.id) === String(requestId));
            if (!request) return;

            const modal = document.getElementById('requestDetailsModal');
            const content = document.getElementById('requestDetailsContent');
            
            content.innerHTML = `
                <div class="modal-header">
                    <h2>Request Details</h2>
                    <span class="close-btn" id="closeRequestDetailsBtn">&times;</span>
                </div>
                <div class="modal-body">
                    <div class="request-details">
                        <div class="detail-row">
                            <span class="detail-label">Request ID:</span>
                            <span class="detail-value">#${request.id}</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Homeowner:</span>
                            <span class="detail-value">${request.homeowner?.firstName || ''} ${request.homeowner?.lastName || ''}</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Service Type:</span>
                            <span class="detail-value">${request.serviceType || ''}</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Status:</span>
                            <span class="detail-value status ${request.status?.toLowerCase() || ''}">${getStatusText(request.status)}</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Priority:</span>
                            <span class="detail-value priority ${request.priority?.toLowerCase() || ''}">${request.priority || ''}</span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Date Submitted:</span>
                            <span class="detail-value">${request.dateSubmitted ? new Date(request.dateSubmitted).toLocaleDateString() : ''}</span>
                        </div>
                        <div class="detail-row full-width">
                            <span class="detail-label">Description:</span>
                            <div class="detail-value description">${request.description || ''}</div>
                        </div>
                        ${request.staffNotes ? `
                            <div class="detail-row full-width">
                                <span class="detail-label">Staff Notes:</span>
                                <div class="detail-value description">${request.staffNotes}</div>
                            </div>
                        ` : ''}
                    </div>
                </div>
            `;

            modal.style.display = 'block';
            // Add close event
            document.getElementById('closeRequestDetailsBtn').onclick = function() {
                modal.style.display = 'none';
            };
        }

        // Close modals
        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.style.display = 'none';
            }
        }

        // Initialize table with data
        async function initializeTable() {
            try {
                const response = await fetch('/Staff/GetServiceRequests');
                const result = await response.json();
                
                if (result.success) {
                    filteredRequests = result.data;
                    updateTable();
                    updatePagination();
                    updateQuickStats();
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                console.error('Error loading service requests:', error);
                showNotification('Error loading service requests: ' + error.message, 'error');
            }
        }

        // Update table with fetched data
        function updateTable() {
            const startIndex = (currentPage - 1) * itemsPerPage;
            const endIndex = startIndex + itemsPerPage;
            const currentPageData = filteredRequests.slice(startIndex, endIndex);

            const tableBody = document.getElementById('requestsTableBody');
            if (!tableBody) {
                console.error('Table body element not found');
                return;
            }

            tableBody.innerHTML = '';

            if (currentPageData.length === 0) {
                const emptyRow = document.createElement('tr');
                emptyRow.innerHTML = '<td colspan="7" class="text-center">No service requests found</td>';
                tableBody.appendChild(emptyRow);
                return;
            }

            currentPageData.forEach(request => {
                const numericId = parseInt(request.id);
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>#${numericId}</td>
                    <td>${request.homeowner?.firstName || ''} ${request.homeowner?.lastName || ''}</td>
                    <td>${request.serviceType || ''}</td>
                    <td>${request.priority || ''}</td>
                    <td><span class="status ${request.status?.toLowerCase() || ''}">${getStatusText(request.status)}</span></td>
                    <td>${request.dateSubmitted ? new Date(request.dateSubmitted).toLocaleDateString() : ''}</td>
                    <td>
                        <div class="action-buttons">
                            <button class="action-btn view" data-request-id="${numericId}" title="View Details">
                                <i class='bx bx-detail'></i>
                            </button>
                            ${request.status === 'Pending' ? `
                                <button class="action-btn accept" data-request-id="${numericId}" title="Accept Request">
                                    <i class='bx bx-check-double'></i>
                                </button>
                                <button class="action-btn reject" data-request-id="${numericId}" title="Reject Request">
                                    <i class='bx bx-x-circle'></i>
                                </button>
                            ` : ''}
                            ${request.status === 'Accepted' ? `
                                <button class="action-btn progress" data-request-id="${numericId}" title="Start Progress">
                                    <i class='bx bx-play-circle'></i>
                                </button>
                            ` : ''}
                            ${request.status === 'In Progress' ? `
                                <button class="action-btn complete" data-request-id="${numericId}" title="Mark Complete">
                                    <i class='bx bx-check-circle'></i>
                                </button>
                            ` : ''}
                        </div>
                    </td>
                `;
                tableBody.appendChild(row);
            });

            // Re-bind event listeners after table update
            bindEventListeners();
        }

        // Filter requests
        function filterRequests() {
            const statusFilter = document.getElementById('statusFilter').value;
            const typeFilter = document.getElementById('typeFilter').value;
            const searchText = document.getElementById('searchInput').value.toLowerCase();

            filteredRequests = filteredRequests.filter(request => {
                const matchesStatus = statusFilter === 'all' || request.status?.toLowerCase() === statusFilter;
                const matchesType = typeFilter === 'all' || request.serviceType?.toLowerCase() === typeFilter;
                const matchesSearch = 
                    (request.id?.toString().toLowerCase().includes(searchText) || false) ||
                    (request.homeowner?.firstName?.toLowerCase().includes(searchText) || false) ||
                    (request.homeowner?.lastName?.toLowerCase().includes(searchText) || false) ||
                    (request.serviceType?.toLowerCase().includes(searchText) || false);

                return matchesStatus && matchesType && matchesSearch;
            });

            currentPage = 1;
            updateTable();
            updatePagination();
        }

        // Initialize everything when the page loads
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM Content Loaded');
            initializeTable();
            loadCompletedRequests();
            bindEventListeners();
        });

        // REPORTS
        function filterReport() {
            const month = document.getElementById('reportMonthFilter').value;
            const year = document.getElementById('reportYearFilter').value;
            
            
            showNotification(`Filtering completed requests for ${month === 'all' ? 'all time' : `Month ${month}`} of ${year}`, 'info');
        }

        // SSTAFF NOTES
        function openStaffNotesModal(requestId) {
            const modal = document.getElementById('staffNotesModal');
            const request = filteredRequests.find(r => r.id === requestId);
            
            if (request) {
                document.getElementById('requestId').value = request.id;
                document.getElementById('homeownerName').value = `${request.homeowner?.firstName} ${request.homeowner?.lastName}`;
                document.getElementById('serviceType').value = request.serviceType;
                document.getElementById('editStaffNotes').value = request.staffNotes || '';
                
                modal.style.display = 'block';
            }
        }

        function closeStaffNotesModal() {
            const modal = document.getElementById('staffNotesModal');
            modal.style.display = 'none';
        }

        document.getElementById('staffNotesForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const requestId = document.getElementById('requestId').value;
            const staffNotes = document.getElementById('editStaffNotes').value;
            
            updateRequestStatus(requestId, 'Completed', staffNotes);
            closeStaffNotesModal();
        });

        window.onclick = function(event) {
            const modal = document.getElementById('staffNotesModal');
            if (event.target === modal) {
                closeStaffNotesModal();
            }
        }

        document.addEventListener('DOMContentLoaded', initializeTable);

        function fetchAllRequests() {
            fetch('/Admin/GetAllServiceRequests')
                .then(res => res.json())
                .then(data => {
                    // Render data in your table
                });
        }

        function assignStaff(requestId, staffId) {
            fetch('/Admin/AssignStaff', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ requestId, staffId })
            }).then(res => {
                if (res.ok) fetchAllRequests();
            });
        }

        async function updateRequestStatus(requestId, newStatus, staffNotes = null) {
            try {
                const response = await fetch('/Staff/UpdateRequestStatus', {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        requestId: requestId,
                        status: newStatus,
                        staffNotes: staffNotes
                    })
                });
                
                const result = await response.json();
                if (result.success) {
                    showNotification(`Request ${newStatus} successfully!`, 'success');
                    await initializeTable(); // Refresh the main table
                    await loadCompletedRequests(); // Refresh completed requests
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('Error updating request status: ' + error.message, 'error');
            }
        }

        function openAssignStaffModal(requestId) {
            document.getElementById('assignRequestId').value = requestId;
            // Fetch staff list
            fetch('/Admin/GetAllStaff') // You need to implement this endpoint!
                .then(res => res.json())
                .then(staffList => {
                    const select = document.getElementById('staffSelect');
                    select.innerHTML = '';
                    staffList.forEach(staff => {
                        select.innerHTML += `<option value="${staff.id}">${staff.firstName} ${staff.lastName}</option>`;
                    });
                    document.getElementById('assignStaffModal').style.display = 'block';
                });
        }
        document.getElementById('assignStaffForm').onsubmit = function(e) {
            e.preventDefault();
            const requestId = document.getElementById('assignRequestId').value;
            const staffId = document.getElementById('staffSelect').value;
            fetch('/Admin/AssignStaff', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ requestId, staffId })
            }).then(res => {
                if (res.ok) {
                    closeModal('assignStaffModal');
                    fetchAllRequests();
                }
            });
        };

        document.getElementById('addStaffForm').onsubmit = function(e) {
            e.preventDefault();
            const staff = {
                FirstName: document.getElementById('staffFirstName').value,
                LastName: document.getElementById('staffLastName').value,
                Username: document.getElementById('staffUsername').value,
                PasswordHash: document.getElementById('staffPassword').value
            };
            fetch('/Admin/RegisterStaff', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(staff)
            }).then(res => res.json())
              .then(data => {
                alert(data.message || 'Staff added!');
                closeModal('addStaffModal');
                // Optionally refresh staff list
            });
        };

        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.add('hide');
                setTimeout(() => {
                    notification.remove();
                }, 300);
            }, 3000);
        }

        document.getElementById('updateStatusForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const newStatus = document.getElementById('newStatus').value;
            const staffNotes = document.getElementById('updateStatusNotes').value;
            
            if (!newStatus) {
                showNotification('Please select a status', 'error');
                return;
            }
            
            updateRequestStatus(requestId, newStatus, staffNotes);
            closeUpdateStatusModal();
        });

        // Load completed requests
        async function loadCompletedRequests() {
            try {
                const response = await fetch('/Staff/GetCompletedRequests');
                const result = await response.json();
                
                if (result.success) {
                    const tableBody = document.getElementById('completedRequestsTableBody');
                    tableBody.innerHTML = '';

                    result.data.forEach(request => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>#${request.id}</td>
                            <td>${request.homeowner?.firstName || ''} ${request.homeowner?.lastName || ''}</td>
                            <td><span class="service-type ${request.serviceType?.toLowerCase() || ''}">${request.serviceType || ''}</span></td>
                            <td><span class="priority ${request.priority?.toLowerCase() || ''}">${request.priority || ''}</span></td>
                            <td>${request.dateSubmitted ? new Date(request.dateSubmitted).toLocaleDateString() : ''}</td>
                            <td>${calculateCompletionTime(request.dateSubmitted)}</td>
                            <td>${request.staffNotes || 'No notes available'}</td>
                            <td>
                                <button class="action-btn edit-notes" data-request-id="${request.id}" title="Edit Staff Notes">
                                    <i class='bx bx-edit'></i>
                                </button>
                            </td>
                        `;
                        tableBody.appendChild(row);
                    });
                    // Bind edit notes buttons
                    document.querySelectorAll('.action-btn.edit-notes').forEach(btn => {
                        btn.onclick = function() {
                            openStaffNotesModal(this.getAttribute('data-request-id'));
                        };
                    });
                } else {
                    showNotification(result.message, 'error');
                }
            } catch (error) {
                showNotification('Error loading completed requests: ' + error.message, 'error');
            }
        }

        // Calculate completion time
        function calculateCompletionTime(dateSubmitted) {
            const submittedDate = new Date(dateSubmitted);
            const completedDate = new Date();
            const diffTime = Math.abs(completedDate - submittedDate);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            return `${diffDays} day${diffDays !== 1 ? 's' : ''}`;
        }

        // Update quick stats
        function updateQuickStats() {
            const totalRequests = filteredRequests.length;
            const pendingRequests = filteredRequests.filter(r => r.status === 'Pending').length;
            const inProgressRequests = filteredRequests.filter(r => r.status === 'In Progress').length;
            const completedRequests = filteredRequests.filter(r => r.status === 'Completed').length;

            // Safely update each stat if the element exists
            const updateStat = (selector, value) => {
                const element = document.querySelector(selector);
                if (element) {
                    element.textContent = value;
                }
            };

            updateStat('.todo-list li:nth-child(1) p:last-child', totalRequests);
            updateStat('.todo-list li:nth-child(2) p:last-child', pendingRequests);
            updateStat('.todo-list li:nth-child(3) p:last-child', inProgressRequests);
            updateStat('.todo-list li:nth-child(4) p:last-child', completedRequests);
        }

        // PAGINATION CONTROLS
        function updatePagination() {
            const totalPages = Math.ceil(filteredRequests.length / itemsPerPage);
            const pageInfo = document.getElementById('pageInfo');
            const prevPage = document.getElementById('prevPage');
            const nextPage = document.getElementById('nextPage');

            if (pageInfo) {
                pageInfo.textContent = `Page ${currentPage} of ${totalPages}`;
            }
            if (prevPage) {
                prevPage.disabled = currentPage === 1;
            }
            if (nextPage) {
                nextPage.disabled = currentPage === totalPages;
            }
        }

        // CHANGE PAGE
        function changePage(delta) {
            const totalPages = Math.ceil(filteredRequests.length / itemsPerPage);
            const newPage = currentPage + delta;
            
            if (newPage >= 1 && newPage <= totalPages) {
                currentPage = newPage;
                updateTable();
                updatePagination();
            }
        }
    </script>
